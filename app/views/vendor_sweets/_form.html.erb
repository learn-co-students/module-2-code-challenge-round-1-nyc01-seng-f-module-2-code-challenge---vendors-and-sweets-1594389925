<div class= 'error'>
    <% if flash[:my_errors]%>
        <% flash[:my_errors].each do |error| %>
                <p><%= error %></p>
        <% end %>
    <% end %>
</div>


<%= form_for @vendor_sweet do |f| %>
        <%= f.label :vendor_id %>
        <%= f.collection_select :vendor_id, @vendors, :id, :name %>
        
        <%= f.label :sweet_id %>
        <%= f.collection_select :sweet_id, @sweets, :id, :name %>

        <%= f.label :price %>
        <%= f.number_field :price %>

        <%= f.submit %>
<% end %>